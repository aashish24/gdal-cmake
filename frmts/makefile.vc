		-DFRMT_jpeg -DFRMT_dted -DFRMT_mem -DFRMT_jdem

!INCLUDE $(GDAL_ROOT)/nmake.opt

default:	o\gdalallregister.obj subdirs

subdirs:
	cd ceos
	$(MAKE) /f makefile.vc
	cd ..\aigrid
